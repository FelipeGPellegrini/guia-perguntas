<!DOCTYPE html>
<html lang="pt-br">

<%- include("./partials/header.ejs") %>

<body>
    <%- include("./partials/navbar.ejs") %>
    
    <div class="container">
        <br>
        <h4> Usu√°rio: <%= pergunta.name %></h4>
        <hr>
       <h3><%= pergunta.titulo %></h3>
       <p><%= pergunta.descricao %></p>
       <hr>
       <form action="/responder" method="post">
        <h3>Responda</h3>
        <br>
        <textarea class="form-control" placeholder="Digite sua resposta aqui..." name="corpo"></textarea>
        <br>
        <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
        <button type="submit" class="btn btn-primary">Responder</button>
       </form>
       <hr>
       <h3>Respostas</h3>

       <% respostas.forEach(resposta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo %></p>
                </div>
            </div>
        <% }) %>
    </div>
</body>

</html>