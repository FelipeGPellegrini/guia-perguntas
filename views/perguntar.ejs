<!DOCTYPE html>
<html lang="pt-br">

<%- include("./partials/header.ejs") %>

<body>
    <%- include("./partials/navbar.ejs") %>
    <div class="container" id="formulario-pergunta">
        <div class="card">
            <div class="card-header">
                <h3>Realizar pergunta</h3>
            </div>
            <div class="card-body">
                <form method="POST" action="/salvarpergunta">
                    <label>Título</label>
                    <input name="titulo" class="form-control" type="text" placeholder="Título">
                    <br>
                    <label>Descrição</label>
                    <textarea name="descricao" class="form-control" placeholder="Descreva sua pergunta aqui..." cols="30"
                        rows="10"></textarea>
                    <br>
                    <button class="btn btn-primary">Enviar pergunta</button>
                </form>
            </div>
        </div>
    </div>
</body>

</html> 